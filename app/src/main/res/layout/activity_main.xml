<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.estitweg.task18.MainActivity">

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Type a fruit here:"
    android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click + HOLD Me"
        android:id="@+id/button"
        android:layout_below="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="82dp" />
    <Button
        android:layout_width="143dp"
        android:layout_height="82dp"
        android:text="Switch"
        android:id="@+id/abutton"
        android:layout_below="@+id/button"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="19dp" />


    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView1"
        android:layout_height="wrap_content"
        android:completionHint="Fruit"
        android:layout_width="match_parent"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true">
    </AutoCompleteTextView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple Toast Button"
        android:id="@+id/abutton1"
        android:background="#0000FF"
        android:layout_alignTop="@+id/abutton"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/abutton"
        android:layout_alignEnd="@+id/abutton2" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complex Toast Button"
        android:id="@+id/abutton2"
        android:layout_alignTop="@+id/button"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
